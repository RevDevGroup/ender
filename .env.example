# =============================================================================
# GENERAL (shared between services)
# =============================================================================
ENVIRONMENT=local
PROJECT_NAME=ender

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changethis
POSTGRES_DB=ender

# =============================================================================
# BACKEND
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=changethis
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis

# Backend public URL (used for OAuth callbacks, QStash webhooks)
# In production, set to your backend's public URL (e.g., https://api.example.com)
SERVER_BASE_URL=http://localhost:8000

# Frontend URL (used for CORS and OAuth redirects to frontend)
# In production, set to your frontend's public URL (e.g., https://app.example.com)
FRONTEND_HOST=http://localhost:5173
BACKEND_CORS_ORIGINS=http://localhost,http://localhost:5173

# Plans & Quotas
QUOTA_RESET_DAY=1
DEFAULT_PLAN=free

# Firebase (push notifications) - Optional
# Get from Firebase Console > Project Settings > Service Accounts > Generate new private key
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account",...}'

# QStash (message queue) - Optional
# Get from Upstash Console (https://console.upstash.com)
# For local dev, use: npx @upstash/qstash-cli dev
QSTASH_URL=http://localhost:8080
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# Email - Choose one provider
EMAIL_PROVIDER=smtp

# SMTP (default, use Mailcatcher for local dev)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_TLS=false
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME=Ender

# Maileroo (alternative provider)
# EMAIL_PROVIDER=maileroo
# MAILEROO_API_KEY=

# OAuth - Optional
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Sentry (error tracking) - Optional
# SENTRY_DSN=
